<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.photowalking.main.NewTraceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/cmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"/>
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/main_new_fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        fab:menu_fab_size="normal"
        fab:menu_colorNormal="@color/dodger_blue"
        fab:menu_colorPressed="@color/dodger_blue"
        fab:menu_colorRipple="@color/accent"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_textColor="@color/black"
        fab:menu_labels_textSize="17sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="@color/white"
        fab:menu_labels_colorPressed="#FFFFFF"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="right"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_show_animation="@anim/show_from_bottom"
        fab:menu_fab_hide_animation="@anim/hide_to_bottom">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_beginTrace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_colorDisabled="@color/monsoon"
            fab:fab_label="开始"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_endTrace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/end"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_label="结束" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_saveTrace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_label="保存" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locate"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_colorDisabled="@color/monsoon"
            fab:fab_label="定位"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_StartCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photo"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white"
            fab:fab_label="拍照" />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
